<%= render 'shared/errors', obj: @post %>

<div class='well'>
  <%= form_for @post do |f| %>
      <div class='control-group'>
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>
      <br/>
      <div class='control-group'>
        <%= f.label :url %>
        <%= f.text_field :url %>
      </div>
      <br/>
      <div class='control-group'>
        <%= f.label :description %>
        <%= f.text_area :description, rows: 5 %>
      </div>
      <br/>
      <!-- check boxes anc convention are very challenging -->
      <!-- rails exepcts a name="options[]" if to return an array like structure -->
      <!-- <select name="post[category_ids][]" multiple='multiple'>
        <option value='1'>Option 1</option>
        <option value='2'>Option 2</option>
      </select> -->
      <div class='control-group'>
        <%= f.label "Categories" %>
        <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
          <% cb.label(class: "checkbox inline") {cb.check_box(class: "checkbox") + cb.text} %>
        <% end %>
      </div>
      <br/>
      <%= f.submit(@post.new_record? ? "Create Post" : 'Update Post', class: "btn btn-primary") %>
  <% end %>
</div>
